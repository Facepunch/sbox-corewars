@using System;
@using Sandbox;
@using Sandbox.UI;
@using Facepunch.CoreWars;

@namespace Facepunch.CoreWars.UI
@attribute [StyleSheet( "/ui/inventory/Hotbar.scss" )]
@inherits Panel

@if ( !CoreWarsPlayer.Me.IsValid() ) return;

@{
    var hotbar = CoreWarsPlayer.Me.Hotbar;
    if ( !hotbar.IsValid() ) return;
}

<root>
    @for ( ushort i = 0; i < hotbar.SlotLimit; i++ )
    {
        var item = hotbar.GetFromSlot( i );
        var index = i;
        <InventorySlot IsSelected=@(GetHotbarIndex() == i) Container=@hotbar Slot=@i DisplaySlot=@(i + 1)></InventorySlot>
    }
</root>

@code
{
    public Hotbar()
    {
        BindClass( "hidden", IsHidden );
    }

    protected override int BuildHash()
    {
        return HashCode.Combine( CoreWarsPlayer.Me, CoreWarsPlayer.Me?.Hotbar, GetHotbarIndex() );
    }

    private int GetHotbarIndex()
    {
        return CoreWarsPlayer.Me?.HotbarIndex ?? 0;
    }

    private bool IsHidden()
    {
        if ( Game.LocalPawn.LifeState == LifeState.Dead )
            return true;

        if ( IDialog.IsActive() )
            return true;

        return false;
    }
}
